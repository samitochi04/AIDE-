# ===========================================
# AIDE+ Server Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Server
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
CLIENT_URL=http://localhost:5173

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_STORAGE_BUCKET=exports

# OpenAI
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ===========================================
# Stripe Configuration
# ===========================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRODUCT_ID=prod_xxx

# Monthly Price IDs (create in Stripe Dashboard > Products)
# Basic: 4.99€/month
STRIPE_PRICE_BASIC_MONTHLY=price_basic_monthly
# Premium: 9.99€/month
STRIPE_PRICE_PREMIUM_MONTHLY=price_premium_monthly
# Ultimate: 14.99€/month
STRIPE_PRICE_ULTIMATE_MONTHLY=price_ultimate_monthly

# Yearly Price IDs (with discount)
# Basic: 49.99€/year (~17% savings)
STRIPE_PRICE_BASIC_YEARLY=price_basic_yearly
# Premium: 99.99€/year (~17% savings)
STRIPE_PRICE_PREMIUM_YEARLY=price_premium_yearly
# Ultimate: 149.99€/year (~17% savings)
STRIPE_PRICE_ULTIMATE_YEARLY=price_ultimate_yearly

# Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=AIDE+ <noreply@aide.plus>

#Admin email
ADMIN_EMAIL=your-admin-email@gmail.com
SUPPORT_EMAIL=your-support-email@gmail.com

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# hCaptcha (Get from https://dashboard.hcaptcha.com)
HCAPTCHA_SITE_KEY=your-hcaptcha-site-key
HCAPTCHA_SECRET_KEY=your-hcaptcha-secret-key

# Logging
LOG_LEVEL=debug

# Development/Testing
BYPASS_EXPORT_RATE_LIMIT=false  # Set to false in production

# Optional: Error tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx
